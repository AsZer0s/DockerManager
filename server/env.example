# 数据库配置
DATABASE_CLIENT=sqlite
DATABASE_PATH=./data/database.sqlite

# MySQL 配置 (如果使用 MySQL)
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password_here
MYSQL_DATABASE=docker_manager
MYSQL_POOL_SIZE=10
MYSQL_CONNECTION_TIMEOUT=60000
MYSQL_ACQUIRE_TIMEOUT=60000

# Telegram 机器人配置
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# JWT 配置 - 请生成强随机密钥 (建议使用 openssl rand -hex 32)
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters_long
JWT_EXPIRES_IN=7d

# 加密密钥 - 请生成32字符的十六进制字符串 (使用 openssl rand -hex 16)
ENCRYPTION_KEY=your_32_character_hex_encryption_key_here

# 服务器配置
NODE_ENV=development
PORT=3000

# 日志配置
LOG_LEVEL=info

# 监控配置
MONITORING_INTERVAL=5000

# SMTP邮件配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=Docker Manager <noreply@dockermanager.com>

# Telegram 代理配置 (可选)
TGBOT_PROXY=http://127.0.0.1:10808

# Telegram Web App URL
TELEGRAM_WEBAPP_URL=http://127.0.0.1:3000/telegram-webapp

# 安全配置
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# 会话配置
SESSION_SECRET=your_session_secret_here

# 文件上传配置
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
